<!-- app/views/customers/missing_email.html.erb -->

<div class="container">
  <h1 class="title">Customers Missing Email</h1>
  
  <!-- First container for displaying customers with padding and borders -->
  <div class="columns is-multiline">
    <% @customers.each do |customer| %>
      <div class="column is-one-quarter" style="padding: 10px;">
        <!-- Render the customer partial for each customer -->
        <div style="margin-bottom: 20px; border: 1px solid #ddd; padding: 10px; border-radius: 8px;">
          <%= render partial: "customers/customer", locals: { customer: customer } %>
        </div>
      </div>
    <% end %>
  </div>
  
<!-- Links to navigate to other views -->
<div class="buttons">
  <%= link_to 'All Customers', root_path, class: "button is-dark" %>
  <%= link_to 'Alphabetized Customers', customers_alphabetized_path, class: "button is-dark" %>
</div>
